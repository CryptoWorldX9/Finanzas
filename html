    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        let transacciones = [];
        let charts = {};

        document.getElementById('fecha').valueAsDate = new Date();

        function cambiarTab(index) {
            const buttons = document.querySelectorAll('.tab-btn');
            const contents = document.querySelectorAll('.tab-content');
            
            buttons.forEach((btn, i) => {
                btn.classList.toggle('active', i === index);
            });
            
            contents.forEach((content, i) => {
                content.classList.toggle('active', i === index);
            });

            if (index === 1) actualizarDashboard();
            if (index === 2) actualizarCierreMes();
        }

        function agregarTransaccion() {
            const transaccion = {
                fecha: document.getElementById('fecha').value,
                concepto: document.getElementById('concepto').value,
                tipo: document.getElementById('tipo').value,
                categoria: document.getElementById('categoria').value,
                metodo: document.getElementById('metodo').value,
                estado: document.getElementById('estado').value,
                monto: parseFloat(document.getElementById('monto').value) || 0,
                prioridad: document.getElementById('prioridad').value
            };

            if (!transaccion.concepto || !transaccion.monto) {
                alert('Por favor complete todos los campos obligatorios');
                return;
            }

            transacciones.push(transaccion);
            actualizarTabla();
            limpiarFormulario();
        }

        function limpiarFormulario() {
            document.getElementById('concepto').value = '';
            document.getElementById('monto').value = '';
            document.getElementById('fecha').valueAsDate = new Date();
        }

        function actualizarTabla() {
            const tbody = document.querySelector('#tablaTransacciones tbody');
            tbody.innerHTML = '';

            transacciones.forEach((t, index) => {
                const tr = document.createElement('tr');
                const montoColor = t.tipo === 'Ingreso' ? '#10b981' : '#ef4444';
                
                tr.innerHTML = `
                    <td>${new Date(t.fecha + 'T00:00').toLocaleDateString('es-CL')}</td>
                    <td>${t.concepto}</td>
                    <td><span class="badge badge-${t.tipo.toLowerCase()}">${t.tipo}</span></td>
                    <td>${t.categoria}</td>
                    <td>${t.metodo}</td>
                    <td><span class="badge badge-${t.estado.toLowerCase()}">${t.estado}</span></td>
                    <td style="color: ${montoColor}; font-weight: 600;">$${t.monto.toLocaleString('es-CL', {minimumFractionDigits: 2})}</td>
                    <td><span class="badge badge-${t.prioridad.toLowerCase()}">${t.prioridad}</span></td>
                    <td><button class="btn-delete" onclick="eliminarTransaccion(${index})">Eliminar</button></td>
                `;
                tbody.appendChild(tr);
            });
        }

        function eliminarTransaccion(index) {
            if (confirm('¬øEliminar esta transacci√≥n?')) {
                transacciones.splice(index, 1);
                actualizarTabla();
            }
        }

        function actualizarDashboard() {
            const ingresos = transacciones.filter(t => t.tipo === 'Ingreso').reduce((sum, t) => sum + t.monto, 0);
            const egresos = transacciones.filter(t => t.tipo === 'Egreso').reduce((sum, t) => sum + t.monto, 0);
            const saldo = ingresos - egresos;
            const ahorro = ingresos > 0 ? ((saldo / ingresos) * 100) : 0;

            document.getElementById('kpiSaldo').textContent = `$${saldo.toLocaleString('es-CL', {minimumFractionDigits: 2})}`;
            document.getElementById('kpiAhorro').textContent = `${ahorro.toFixed(1)}%`;
            document.getElementById('kpiGasto').textContent = `$${egresos.toLocaleString('es-CL', {minimumFractionDigits: 2})}`;

            document.getElementById('kpiSaldoChange').textContent = saldo >= 0 ? '‚Üë Positivo' : '‚Üì Negativo';
            document.getElementById('kpiSaldoChange').className = saldo >= 0 ? 'kpi-change positive' : 'kpi-change negative';

            document.getElementById('kpiAhorroChange').textContent = ahorro >= 10 ? '‚Üë Excelente' : '‚Üì Mejorar';
            document.getElementById('kpiAhorroChange').className = ahorro >= 10 ? 'kpi-change positive' : 'kpi-change negative';

            const gastosMes = calcularGastosPorCategoria();
            const promedios = calcularPromedios();
            
            let alertasHTML = '';
            Object.keys(gastosMes).forEach(cat => {
                if (promedios[cat] && gastosMes[cat] > promedios[cat] * 1.2) {
                    alertasHTML += `
                        <div class="alert">
                            <div class="alert-title">‚ö†Ô∏è Alerta: ${cat}</div>
                            <div class="alert-text">El gasto en ${cat} super√≥ el promedio en ${((gastosMes[cat]/promedios[cat] - 1) * 100).toFixed(1)}%. Considera reducir gastos en esta categor√≠a.</div>
                        </div>
                    `;
                }
            });
            document.getElementById('alertas').innerHTML = alertasHTML;

            actualizarGraficoCategorias(gastosMes);
            actualizarGraficoPresupuesto(ingresos, egresos);
        }

        function calcularGastosPorCategoria() {
            const gastos = {};
            transacciones.filter(t => t.tipo === 'Egreso').forEach(t => {
                gastos[t.categoria] = (gastos[t.categoria] || 0) + t.monto;
            });
            return gastos;
        }

        function calcularPromedios() {
            const hoy = new Date();
            const hace3Meses = new Date(hoy.getFullYear(), hoy.getMonth() - 3, 1);
            
            const transacciones3Meses = transacciones.filter(t => new Date(t.fecha) >= hace3Meses && t.tipo === 'Egreso');
            const gastosPorMes = {};
            
            transacciones3Meses.forEach(t => {
                const mes = new Date(t.fecha).getMonth();
                if (!gastosPorMes[mes]) gastosPorMes[mes] = {};
                gastosPorMes[mes][t.categoria] = (gastosPorMes[mes][t.categoria] || 0) + t.monto;
            });

            const promedios = {};
            Object.values(gastosPorMes).forEach(mes => {
                Object.keys(mes).forEach(cat => {
                    promedios[cat] = (promedios[cat] || 0) + mes[cat];
                });
            });

            Object.keys(promedios).forEach(cat => {
                promedios[cat] /= Object.keys(gastosPorMes).length || 1;
            });

            return promedios;
        }

        function actualizarGraficoCategorias(gastos) {
            const ctx = document.getElementById('chartCategorias');
            if (charts.categorias) charts.categorias.destroy();

            charts.categorias = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(gastos),
                    datasets: [{
                        data: Object.values(gastos),
                        backgroundColor: ['#1e3c72', '#2a5298', '#3b6ab8', '#4c7dd8', '#5d8ff8', '#6ea1ff', '#7fb3ff', '#90c5ff']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        function actualizarGraficoPresupuesto(ingresos, egresos) {
            const ctx = document.getElementById('chartPresupuesto');
            if (charts.presupuesto) charts.presupuesto.destroy();

            const porcentaje = ingresos > 0 ? (egresos / ingresos) * 100 : 0;

            charts.presupuesto = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Gastado', 'Disponible'],
                    datasets: [{
                        data: [egresos, Math.max(0, ingresos - egresos)],
                        backgroundColor: porcentaje > 80 ? ['#ef4444', '#fee2e2'] : ['#2a5298', '#dbeafe']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        function actualizarCierreMes() {
            const hoy = new Date();
            const meses = [];
            const ingresosData = [];
            const egresosData = [];

            for (let i = 2; i >= 0; i--) {
                const fecha = new Date(hoy.getFullYear(), hoy.getMonth() - i, 1);
                const mesNombre = fecha.toLocaleDateString('es-CL', { month: 'short', year: '2-digit' });
                meses.push(mesNombre);

                const mesInicio = new Date(fecha.getFullYear(), fecha.getMonth(), 1);
                const mesFin = new Date(fecha.getFullYear(), fecha.getMonth() + 1, 0);

                const transaccionesMes = transacciones.filter(t => {
                    const fechaT = new Date(t.fecha);
                    return fechaT >= mesInicio && fechaT <= mesFin;
                });

                ingresosData.push(transaccionesMes.filter(t => t.tipo === 'Ingreso').reduce((sum, t) => sum + t.monto, 0));
                egresosData.push(transaccionesMes.filter(t => t.tipo === 'Egreso').reduce((sum, t) => sum + t.monto, 0));
            }

            const ctx1 = document.getElementById('chartComparativo');
            if (charts.comparativo) charts.comparativo.destroy();

            charts.comparativo = new Chart(ctx1, {
                type: 'bar',
                data: {
                    labels: meses,
                    datasets: [
                        {
                            label: 'Ingresos',
                            data: ingresosData,
                            backgroundColor: '#10b981'
                        },
                        {
                            label: 'Egresos',
                            data: egresosData,
                            backgroundColor: '#ef4444'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: { legend: { position: 'bottom' } }
                }
            });

            const ctx2 = document.getElementById('chartTendencia');
            if (charts.tendencia) charts.tendencia.destroy();

            charts.tendencia = new Chart(ctx2, {
                type: 'line',
                data: {
                    labels: meses,
                    datasets: [
                        {
                            label: 'Ingresos',
                            data: ingresosData,
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            fill: true
                        },
                        {
                            label: 'Egresos',
                            data: egresosData,
                            borderColor: '#ef4444',
                            backgroundColor: 'rgba(239, 68, 68, 0.1)',
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: { legend: { position: 'bottom' } }
                }
            });

            actualizarTablaResumen();
        }

        function actualizarTablaResumen() {
            const tbody = document.querySelector('#tablaResumen tbody');
            tbody.innerHTML = '';

            const gastos = calcularGastosPorCategoria();
            const promedios = calcularPromedios();

            Object.keys(gastos).forEach(cat => {
                const tr = document.createElement('tr');
                const variacion = promedios[cat] ? ((gastos[cat] / promedios[cat] - 1) * 100) : 0;
                const variacionColor = variacion > 0 ? '#ef4444' : '#10b981';
                const variacionTexto = variacion > 0 ? `+${variacion.toFixed(1)}%` : `${variacion.toFixed(1)}%`;

                tr.innerHTML = `
                    <td>${cat}</td>
                    <td style
